<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android">
<item android:state_pressed = "false">
    <layer-list>
        <item>
            <shape android:shape = "rectangle">
                <size android:width="80dp" android:height="80dp"/>
                <solid android:color ="@color/btnBG"/>
                <corners android:radius="40dp"/>
            </shape>
        </item>
        <item android:drawable="@drawable/b_letter" android:height="30dp" android:width="30dp" android:gravity="center"/>
    </layer-list>
</item>
    <item android:state_pressed = "true">
        <layer-list>
            <item>
                <shape android:shape = "rectangle">
                    <size android:width="80dp" android:height="80dp"/>
                    <solid android:color ="@color/blue"/>
                    <corners android:radius="40dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/b_letter_white" android:height="30dp" android:width="30dp" android:gravity="center"/>
        </layer-list>
    </item>
</selector>